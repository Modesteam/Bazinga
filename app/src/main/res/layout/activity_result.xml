<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.66">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Resultado:"
            android:id="@+id/textViewResult"
            android:layout_gravity="center_horizontal|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="  Jogador 1:"
            android:id="@+id/textViewPlayerOne"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Jogador2:  "
            android:id="@+id/textViewPlayerTwo"
            android:layout_gravity="right|center_vertical" />

        <Button
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:text="Zerar Contagem"
            android:id="@+id/buttonCleanGame"
            android:layout_gravity="left|bottom" />

        <Button
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:text="Nova Partida"
            android:id="@+id/buttonNewRound"
            android:layout_gravity="center_horizontal|bottom" />

        <Button
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:text="Menu Principal"
            android:id="@+id/buttonMain"
            android:layout_gravity="right|bottom" />
    </FrameLayout>
</LinearLayout>